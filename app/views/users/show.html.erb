<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %><br>
      </h1>
    </section>
    <section class="stats">
     <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.bookposts.any? %>
    <h3>Bookposts (<%= @user.bookposts.count %>)</h3>
    <ol class="bookposts">
      <%= render @bookposts %>
    </ol>
    <%= will_paginate @bookposts %>
    <% end %>
  </div>
</div>
